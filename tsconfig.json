{
  "compilerOptions": {
    "module": "esnext",
    "lib": ["es2021", "dom"],
    "outDir": "../../dist/out-tsc",
    "types": ["node"],
    "emitDecoratorMetadata": true,
    "target": "es2022",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "moduleResolution": "bundler"
  },
  "include": ["src/**/*.ts", "examples.ts"]
}
